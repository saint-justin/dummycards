{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb",
    "airbnb-typescript"
  ],
  "rules": {
    "no-console": 
    [
      "error", 
      { "allow": ["log", "warn", "error"] }
    ]
  }
}